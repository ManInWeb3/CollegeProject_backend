from django.shortcuts import render
from rest_framework import viewsets
from .serializers import IvrSerializer,IvrMenuSerializer
from .models import Ivr, IvrMenu

from django.http import HttpResponse, JsonResponse
from django.views.decorators.csrf import csrf_exempt
from rest_framework.renderers import JSONRenderer
from rest_framework.parsers import JSONParser

permission_classes = []

@csrf_exempt
def IvrListView(request):
    """
    List ivr, or create a new one.
    """
    if request.method == 'GET':
        ivrset = Ivr.objects.all()[:10]
        serializer = IvrSerializer(ivrset, many=True)
        return JsonResponse(serializer.data, safe=False)

    elif request.method == 'POST':
        data = JSONParser().parse(request)
        serializer = IvrSerializer(data=data)
        if serializer.is_valid():
            serializer.save()
            return JsonResponse(serializer.data, status=201)
        return JsonResponse(serializer.errors, status=400)

@csrf_exempt
def IvrDetailView(request, pk):
    """
    Retrieve, update or delete IVR records
    """
    try:
        ivr = Ivr.objects.get(pk=pk)
    except Ivr.DoesNotExist:
        return HttpResponse(status=404)

    if request.method == 'GET':
        serializer = IvrSerializer(ivr)
        return JsonResponse(serializer.data)

    elif request.method == 'PUT':
        data = JSONParser().parse(request)
        serializer = IvrSerializer(ivr, data=data)
        if ivr.ivr_number != data['ivr_number']:
            return JsonResponse("You cannot change ivr_number", status=400)

        if serializer.is_valid():
            serializer.save()
            return JsonResponse(serializer.data)
        return JsonResponse(serializer.errors, status=400)

    elif request.method == 'PATCH':
        data = JSONParser().parse(request)
        serializer = IvrSerializer(ivr, data=data, partial=True)
        if serializer.is_valid():
            serializer.save()
            return JsonResponse(serializer.data)
        return JsonResponse(serializer.errors, status=400)

    elif request.method == 'DELETE':
        ivr.delete()
        return HttpResponse(status=204)







